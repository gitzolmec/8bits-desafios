  <nav class="navbar navbar-light bg-dark min-vw-100">
     <a href="/api/products">
      <img src="/img/logo-2019.png" width="300px" />
    </a>
    <div class="welcome-message text-white">
      Bienvenido/a, {{first_name}} {{last_name}}<br>
      Role: {{role}}
    </div>
    <ul class="navbar-nav">
      <li class="nav-item">
        <a
          class="nav-link text-white fw-bold cart"
          href="/api/carts/{{cartId}}"
        >
          <i class="bi bi-cart mx-5" id="carritoContenedor">
           {{totalProducts}}
          </i>
        </a>
      </li>
      <li class="nav-item">
        <button
          class="btn btn-outline-light btn-sm"
          id="logoutButton"
          onclick="location.href='/api/auth/logout'"
        >
          Cerrar Sesi√≥n
        </button>
      </li>
       <li> {{#if adminValidation}}<button
          class="btn btn-outline-light btn-sm"
          id="user-admin"
          
  onclick="location.href='/api/users/list'">Mantenedor de usuarios</button>
  {{else}}
  <button
          class="btn btn-outline-light btn-sm"
          id="chatButton"
          onclick="location.href='/api/chat'"
        >
          CHAT
        </button>
{{/if}} 
        
          
        </li>
       <li><button class="btn btn-outline-light btn-sm" onclick="location.href='/api/users/current'">Perfil</button></li>
    </ul>
  </nav>
</header>

<div class="container mt-5" style="background-color: aliceblue;">
  <div class="row">
    <div class="col-md-6">
      <img src="{{thumbnail}}" class="img-fluid" alt="Producto" />
    </div>

    <div class="col-md-6">
      <h1 class="h2 mb-3">
        {{title}}
      </h1>

      <p>
        {{description}}
      </p>

      <div class="d-flex mb-3">
        <p class="product__price lead mr-4">
          ${{price}}
        </p>

        <p class="badge badge-secondary product__sku">
          Codigo: {{_id}}
        </p>
      </div>

      <p class="mb-4">
        <i class="fas fa-warehouse"></i>
        En stock:
        {{stock}}
      </p>
  
      <button  class="btn btn-primary mr-2" id="{{_id}}" {{#unless
        adminValidation}} style="display: inline-block; margin-right: 10px;" onclick="addProductToView('{{_id}}', '{{cartId}}')" {{else}} style="display: none" {{/unless}}>
        Add to cart
      </button>
    </div>
  </div>
  <a href="/api/products" class="btn btn-primary" style="">
    Back
  </a>
</div>

