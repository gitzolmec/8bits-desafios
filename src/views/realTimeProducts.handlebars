<h2>Lista de Productos</h2>

<style>
  .product-container {
    display: flex;
    flex-wrap: wrap;
  }

  .product-card {
    box-sizing: border-box;
    width: 20%;
    margin-right: 5%; /* Espacio entre elementos */
    margin-bottom: 20px; /* Espacio entre filas */
  }

  .product-image {
    max-width: 100%;
    height: auto;
  }
</style>

<div class="product-container" id="product-list">
  {{#each products}}
  {{#if this._id}}
    <div class="product-card" id="product-{{this.id}}">
      <img src="{{this.thumbnail}}" class="product-image" alt="Producto">
      <div class="product-details">
        <h5 class="product-title">{{this.title}}</h5>
        <p class="product-description">{{this.description}}</p>
        <p class="product-price">Precio: ${{this.price}}</p>
      </div>
    </div>
    {{/if}}
  {{/each}}
</div>
</div>
<div class="nextandprev">
  {{#if hasPrevPage}}
     <a href="?page={{prevPage}}{{#if pLimit}}&limit={{pLimit}}{{/if}}{{#if pSort}}&sort={{pSort}}{{/if}}"><button>ANTERIOR</button></a>

  {{/if}}
  {{#if hasNextPage}}
  <a href="?page={{nextPage}}{{#if pLimit}}&limit={{pLimit}}{{/if}}{{#if pSort}}&sort={{pSort}}{{/if}}"><button>SIGUIENTE</button></a>
  {{/if}}
  </div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/product.js"></script>
