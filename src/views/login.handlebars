<header>
  <nav class="navbar navbar-light bg-dark min-vw-100">
    <img src="/img/logo-2019.png" width="300px" class="mx-auto"/>

  </nav>
</header>
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <header class="card-header">
          <h4 class="card-title mt-2">Iniciar sesión</h4>
        </header>
        <article class="card-body">
          <form action="" id="loginForm">
            <div class="form-group">
              <label for="usernameInput">Nombre de usuario</label>
              <input
                type="email"
                class="form-control"
                id="usernameInput"
                placeholder="Ingresa tu nombre de usuario"
                name="email"
              />
            </div>
            <div class="form-group">
              <label for="passwordInput">Contraseña</label>
              <input
                type="password"
                class="form-control"
                id="passwordInput"
                placeholder="Ingresa tu contraseña"
                name="password"
              />
            </div>
            <div class="form-group">
              <button
                type="submit"
                class="btn btn-primary btn-block"
                id="loginButton"
              >Iniciar sesión</button>
            </div class="form-group">
            <label>¿No tienes una cuenta? <a href="/api/signup">Registrate</a></label>
            <div>

            </div>
          </form>
        </article>
      </div>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>